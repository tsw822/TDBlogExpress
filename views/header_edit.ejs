<body>
    <form class="" name="article_form" action="" method="POST" enctype="multipart/form-data">
            <label class="form-text" for="title">
                New Slagon:
            </label>
            <input class="form-control" type="text" name="slagon" id="slagon" placeholder="Please enter your new Slagon here"> 

        <br><br>
        <p class="form-text text-muted">
            You can change your header logo here, please submit .jpg format picture,best size is 150*150
            <br>
            <input type="file" name="headerImage" id="headerImage">
            <img id="imagePreview" src="/images/logo.jpg " alt="Header Image" width="150 px">
        </p>
    <br><br>
    <input class="btn btn-lg btn-primary" type="submit" name="submit" value="Submit">
</form>

</div>

<script>
    // Image Preview Functions
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
            $('#imagePreview').attr('src', e.target.result);
            }
            
            // convert to base64 string
            reader.readAsDataURL(input.files[0]); 
        }
            console.log(input.files[0]);
    }
    $('#articleImage').change(function() {
        readURL(this);
    });
</script>

